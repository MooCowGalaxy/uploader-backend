            <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" class="shape-fill"></path>
        </svg>
    </div>
</section>
<div class="spacer p200"></div>
<div class="p-10 bg-shape">
    <div class="container max-w-8xl mx-auto transition-on-load">
        <p class="text-center font-bold text-white mb-5 text-3xl sm:text-4xl">Stats</p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-0 mx-3" id="stats">
            <div class="rounded-lg md:rounded-none">
                <h1>Users</h1>
                <p id="users" class="animate-pulse h-2 mt-2"></p>
            </div>
            <div class="rounded-lg md:rounded-none">
                <h1>Uploads</h1>
                <p id="uploads" class="animate-pulse h-2 mt-2"></p>
            </div>
            <div class="rounded-lg md:rounded-none">
                <h1>Storage used</h1>
                <p id="storage" class="animate-pulse h-2 mt-2"></p>
            </div>
        </div>
    </div>
</div>
<div class="bg-blue-100">
    <section class="relative">
        <div class="custom-shape-divider-2">
            <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
                <path d="M985.66,92.83C906.67,72,823.78,31,743.84,14.19c-82.26-17.34-168.06-16.33-250.45.39-57.84,11.73-114,31.07-172,41.86A600.21,600.21,0,0,1,0,27.35V120H1200V95.8C1132.19,118.92,1055.71,111.31,985.66,92.83Z" class="shape-fill"></path>
            </svg>
        </div>
    </section>
    <div class="spacer p400"></div>
    <div class="text-center transition-on-load">
        <h1 class="text-3xl mb-2"><span class="text-bright-cyan gradient font-bold">Start sharing today!</span></h1>
        <button class="px-4 py-2 rounded-md bg-sky-500 text-white font-semibold login">Log In</button>
    </div>
    <div class="spacer p300"></div>
</div>
</body>
</html>